<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangMatHangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#93DAF3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="troVe"
            android:text="Hủy"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng hàng"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/anhdemo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Nguyễn Huy"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAnh"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/with_shadow"
                    android:gravity="center"
                    android:orientation="horizontal" />
                <ImageView
                    android:id="@+id/imaChonAnh"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </RelativeLayout>



            <EditText
                android:id="@+id/edTieude"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/with_shadow"
                android:hint="Tiêu đề"
                android:padding="10dp" />

            <EditText
                android:id="@+id/edNoidungMatHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/with_shadow"
                android:hint="Nội dung"
                android:padding="10dp" />

            <EditText
                android:inputType="number"
                android:id="@+id/edGiaban"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/with_shadow"
                android:hint="Giá bán"
                android:padding="10dp" />


            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/with_shadow"
                android:hint="Địa Chỉ"
                android:padding="10dp" />

            <Spinner
                android:id="@+id/spnHangMuc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/with_shadow"
                android:entries="@array/HangMuc" />

            <TextView
                android:id="@+id/tvDangtin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/with_shadow"
                android:gravity="center"
                android:text="Đăng tin"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>